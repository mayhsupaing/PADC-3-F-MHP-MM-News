<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_sport_news"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_sport_top_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/img_dummy_top_news_logo"
            android:drawablePadding="12dp"
            android:text="Top News"
            android:textSize="16sp"
            android:textColor="@color/full_black"/>

        <ImageView
            android:id="@+id/iv_sport_top_news_image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_below="@id/tv_sport_top_news"
            android:src="@drawable/img_dummy_top_news" />

        <TextView
            android:id="@+id/tv_sport_top_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_sport_top_news_image"
            android:layout_marginLeft="16dp"
            android:text="@string/top_sport_news_title"
            android:textSize="20sp"
            android:textColor="@color/full_black"/>


        <TextView
            android:id="@+id/tv_one_football"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sport_top_news_title"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/img_dummy_one_football"
            android:drawablePadding="12dp"
            android:text="OneFootball" />

        <View
            android:id="@+id/v_sport_up_divider"
            style="@style/Divider"
            android:layout_below="@id/tv_one_football"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/iv_sport_sub_news_image"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_below="@id/v_sport_up_divider"
            android:layout_marginTop="8dp"
            android:src="@drawable/img_dummy_sub_news_img" />

        <TextView
            android:id="@+id/tv_sport_sub_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_sport_up_divider"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/iv_sport_sub_news_image"
            android:paddingLeft="4dp"
            android:text="Dybala not a target for PSG, says AI-Khelaifi"
            android:textColor="@color/full_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_one_football_sub_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sport_sub_news_title"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/iv_sport_sub_news_image"
            android:drawableLeft="@drawable/img_dummy_one_football"
            android:drawablePadding="12dp"
            android:paddingLeft="4dp"
            android:text="OneFootball" />

        <View
            android:id="@+id/v_sport_bottom_divider"
            style="@style/Divider"
            android:layout_below="@id/iv_sport_sub_news_image"
            android:layout_marginTop="8dp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>